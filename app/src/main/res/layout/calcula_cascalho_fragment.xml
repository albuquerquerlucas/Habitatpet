<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_s_splash"
    tools:context="com.mobile.fragments.CalculaCascalhoFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar"/>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_calculadora_aquario_cascalho"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/branco_fonte_logo"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/imgcascalho"/>

        <TextView
            android:id="@+id/txtResultCalcVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/branco_fonte_logo"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/edtNComprimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            android:layout_gravity="center_horizontal"
            android:background="@color/amarelo_claro"
            android:hint="Comprimento (X) cm" />

        <EditText
            android:id="@+id/edtNLargura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:inputType="numberDecimal"
            android:imeOptions="actionDone"
            android:layout_gravity="center_horizontal"
            android:background="@color/amarelo_claro"
            android:hint="Largura (Y) cm" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="* A altura recomendada Ã© de 5cm."
            android:textColor="@color/branco_fonte_logo"
            />


    </LinearLayout>

    <Button
        android:text="Voltar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btnVoltar"
        android:textColor="@color/branco_fonte_logo"
        android:background="@drawable/btn_entrar_seletor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/relativebotoesacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_above="@+id/btnVoltar"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="50dp"
            android:paddingLeft="60dp"
            android:text="Calcular"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btnLimparCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingRight="60dp"
            android:paddingLeft="56dp"
            android:text="Limpar"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</RelativeLayout>
