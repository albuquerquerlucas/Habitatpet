<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobile.fragments.FerramentasFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/include_toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_ferramentas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/azulEscuro"
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:scaleX="0.6"
            android:scaleY="0.6"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Calcular Volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCVolume"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_marginBottom="2dp"/>

        <Button
            android:text="Calcular Qtd. Cascalho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCCascalho"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_marginBottom="2dp"/>

        <Button
            android:text="Calcular Qtd. Substrato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCSubstrato"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_marginBottom="2dp"/>

        <Button
            android:text="Quantidade de Peixes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCPeixes"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_marginBottom="2dp"/>

        <Button
            android:text="Quantidade de Ração"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCRacao"
            android:textColor="@color/branco_fonte_logo"
            android:background="@drawable/btn_entrar_seletor"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>


</RelativeLayout>
